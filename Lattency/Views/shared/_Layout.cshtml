<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lattency</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false) <!-- This allows page-specific CSS -->
</head>
<body>
    <header class="navbar">
        <div class="container">
            <a href="/" class="logo">Lattency</a>
            <nav class="nav-links">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Menu" asp-action="Index">Menu</a>
                <a asp-controller="Booking" asp-action="Index">Booking</a>
                <a href="/About">About</a>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()   <!-- Page-specific content goes here -->
    </main>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Lattency</p>
    </footer>
</body>
</html>
