<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lattency</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false) <!-- This allows page-specific CSS -->
</head>
<body>
    <header class="navbar">
        <div class="container">
            <a href="/" class="logo">Lattency</a>
            <nav class="nav-links">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Menu" asp-action="Index">Menu</a>
                <a asp-controller="Booking" asp-action="Index">Booking</a>
                <a asp-controller="About" asp-action="Index">About</a>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Index">Admin</a>
                    }
                    else if (User.IsInRole("Customer"))
                    {
                        <a asp-controller="Account" asp-action="Profile">My Account</a>
                    }

                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="btn-logout">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index">Login</a>
                }
            </nav>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()   <!-- Page-specific content goes here -->
    </main>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Lattency</p>
    </footer>
</body>
</html>
