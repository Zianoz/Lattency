@model IEnumerable<Lattency.Models.CafeTable>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Tables";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="admin-section">
    <div class="admin-header">
        <h1>Manage Tables</h1>
        <div>
            <a asp-action="CreateTable" class="btn btn-success">+ Create New Table</a>
            <a asp-action="Index" class="btn btn-secondary">? Back to Dashboard</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Table ID</th>
                    <th>Capacity</th>
                    <th>Available</th>
                    <th>Image URL</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model)
                {
                    <tr>
                        <td>@table.Id</td>
                        <td>@table.Capacity persons</td>
                        <td>
                            <span class="status-badge @(table.Available ? "status-active" : "status-expired")">
                                @(table.Available ? "Available" : "Occupied")
                            </span>
                        </td>
                        <td>@(string.IsNullOrEmpty(table.BildURL) ? "-" : table.BildURL)</td>
                        <td>
                            <form asp-action="DeleteTable" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this table?');">
                                <input type="hidden" name="id" value="@table.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-data">No tables found. <a asp-action="CreateTable">Create your first table</a></p>
    }
</div>
