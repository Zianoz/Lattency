@model Lattency.DTOs.DishCreationDTO

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Dish";
    var menuId = ViewBag.MenuId;
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="admin-section">
    <div class="admin-header">
        <h1>Add New Dish</h1>
        <a asp-action="MenuDetails" asp-route-id="@menuId" class="btn btn-secondary">? Back to Menu</a>
    </div>

    <form asp-action="CreateDish" asp-route-menuId="@menuId" method="post" class="admin-form">
        <div class="form-group">
            <label for="DishName">Dish Name</label>
            <input type="text" id="DishName" name="DishName" class="form-control" required />
            <span asp-validation-for="DishName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Description" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" id="Price" name="Price" class="form-control" step="0.01" min="0" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ImageURL">Image URL (optional)</label>
            <input type="text" id="ImageURL" name="ImageURL" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox" id="IsPopular" name="IsPopular" />
                Mark as Popular Dish
            </label>
        </div>

        <button type="submit" class="btn btn-success">Add Dish</button>
    </form>
</div>
