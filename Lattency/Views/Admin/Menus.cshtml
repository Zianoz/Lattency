@model IEnumerable<Lattency.Models.Menu>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Menus";
    ViewData["Description"] = "Manage all menus";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="admin-section">
    <div class="admin-header">
        <h1>Manage Menus</h1>
        <div>
            <a asp-action="CreateMenu" class="btn btn-success">+ Create New Menu</a>
            <a asp-action="Index" class="btn btn-secondary">? Back to Dashboard</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="menu-grid">
            @foreach (var menu in Model)
            {
                <div class="menu-card">
                    <h3>@menu.Name</h3>
                    <p>@menu.Dishes.Count dish(es)</p>
                    <div class="card-actions">
                        <a asp-action="MenuDetails" asp-route-id="@menu.Id" class="btn btn-primary btn-sm">View Details</a>
                        <form asp-action="DeleteMenu" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this menu and all its dishes?');">
                            <input type="hidden" name="id" value="@menu.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-data">No menus found. <a asp-action="CreateMenu">Create your first menu</a></p>
    }
</div>
